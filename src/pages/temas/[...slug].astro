---
import type { GetStaticPaths } from 'astro';
import { type CollectionEntry, getCollection } from 'astro:content';

import SelfAssessmentModal from '@/components/self-assessment/SelfAssessmentModal.astro';
import selfAssessments from '@/data/self-assessments.json';
import TopicLayout from '@/layouts/TopicLayout.astro';
import type { SelfAssessmentsByTopic } from '@/types/self-assessment';
import type { TopicId } from '@/types/topic';

type TopicEntry = CollectionEntry<'topics'>;
interface Props {
  topic: TopicEntry;
}

export const getStaticPaths = (async () => {
  const topics = await getCollection('topics');

  return topics.map((topic) => ({
    params: { slug: topic.slug },
    props: { topic },
  }));
}) satisfies GetStaticPaths;

const { topic } = Astro.props;
const { title, description, icon, color, order } = topic.data;

const { Content } = await topic.render();

const { slug } = Astro.params;
const assessments = selfAssessments as SelfAssessmentsByTopic;
const assessment = assessments[slug as TopicId];
const dialogId = `self-assessment-${slug}`;
---

<TopicLayout title={title} description={description} icon={icon} color={color} order={order}>
  <Content />

  {assessment && <SelfAssessmentModal dialogId={dialogId} assessment={assessment} />}
</TopicLayout>
