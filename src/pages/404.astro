<style>
  .not-found {
    width: min(42rem, 100%);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg, 1rem);
    background-color: var(--bf-soft);
    padding: 2rem;
    margin-inline: auto;
    margin-block-start: 4rem;
    box-shadow: var(--shadow-md);
  }

  .not-found__code {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 800;
    letter-spacing: -0.06em;
    line-height: 1;
    text-align: center;
    margin: 0 0 1rem 0;
    color: var(--text-secondary);
  }

  .not-found__desc {
    margin: 0 0 1.5rem 0;
    color: var(--text-secondary);
  }

  .not-found__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
</style>
