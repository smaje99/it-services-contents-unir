---
import { Icon } from 'astro-icon/components';

import { withBaseUrl } from '@/utils/path';
---

<header class='header'>
  <a href={withBaseUrl('')}>
    <h1 data-heading='icon'><Icon name='graduation-cap' /> Proyecto de Aula</h1>
  </a>
  <h2>Servicios de Tecnologías de la Información</h2>
  <p class='subtitle'>Material complementario para el curso de Ingeniería Informática</p>
</header>
<style>
  .header {
    background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
    color: var(--bg-base);
    padding: 2.8rem;
    text-align: center;
  }

  .header h1 {
    text-decoration: none;
  }

  .header a {
    display: inline-block;
    color: var(--bg-base);
    text-decoration: none;
  }

  .header h2 {
    opacity: 0.9;
  }

  .subtitle {
    opacity: 0.8;
  }
</style>
