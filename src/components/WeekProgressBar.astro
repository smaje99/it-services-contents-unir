---
interface Props {
  week: number;
  maxWeeks: number;
}

const { week = 0, maxWeeks = 9 } = Astro.props;
const percentage = maxWeeks > 0 ? Math.round((week / maxWeeks) * 100) : 0;
---

<aside class='week-progress'>
  <label for='weekProgress' class='progress-label'> Progreso semanal </label>
  <progress id='weekProgress' class='progress-bar' value={week} max={maxWeeks}></progress>
  <output id='weekProgressText' class='progress-text' for='weekProgress'>
    Semana {week} de {maxWeeks} ({percentage}%)
  </output>
</aside>

<style>
  .week-progress {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35rem;
    padding: 1rem 2rem;
    background: var(--bg-soft);
  }

  .progress-label {
    color: var(--text-secondary);
  }

  .progress-bar {
    width: 100%;
    height: 12px;
    appearance: none;
  }

  progress::-webkit-progress-bar {
    background: #e5e7eb;
    border-radius: var(--radius-sm);
  }

  progress::-webkit-progress-value {
    background: linear-gradient(90deg, #28a745, #20c997);
    border-radius: var(--radius-sm);
  }

  progress::-moz-progress-bar {
    background: linear-gradient(90deg, #28a745, #20c997);
    border-radius: var(--radius-sm);
  }

  .progress-text {
    font-weight: 500;
    color: var(--text-muted);
  }
</style>
