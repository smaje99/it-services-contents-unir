---
interface Props {
  class?: string;
  [key: string]: unknown; // props adicionales
}
const { class: className = '', ...rest } = Astro.props;
---

<div class:list={['dialog-content', className]} {...rest}>
  <slot />
</div>

<style>
  .dialog-content {
    display: grid;
    gap: 1rem;
  }
</style>
