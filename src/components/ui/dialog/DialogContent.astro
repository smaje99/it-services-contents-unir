---
interface Props {
  class?: string;
  [key: string]: unknown; // props adicionales
}
const { class: className = '', ...rest } = Astro.props;
---

<div class:list={['dialog-content', className]} {...rest}>
  <slot />
</div>

<style>
  .dialog-content {
    width: 100%;
    height: 72%;
    display: grid;
    gap: 1rem;

    padding-inline: 2rem;
    padding-bottom: 6rem;
    overflow-y: auto;
  }
</style>
