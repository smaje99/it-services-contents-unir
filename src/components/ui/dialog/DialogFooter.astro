---
interface Props {
  class?: string;
  [key: string]: unknown; // props adicionales
}
const { class: className = '', ...rest } = Astro.props;
---

<footer class:list={['dialog-footer', className]} {...rest}>
  <slot />
</footer>

<style>
  .dialog-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }
</style>
