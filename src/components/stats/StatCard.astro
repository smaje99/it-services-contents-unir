---
import { Icon } from "astro-icon/components";

import CardRoot from "../ui/card/CardRoot.astro";
import CardHeader from "../ui/card/CardHeader.astro";
import CardTitle from "../ui/card/CardTitle.astro";
import CardContent from "../ui/card/CardContent.astro";

interface Props {
  icon: string; // tabler icon name
  title: string;
  value: string;
}

const { icon, title, value } = Astro.props;
---

<CardRoot class="stat-card">
  <CardContent class="stat-content">
    <div class="stat-icon" aria-hidden="true">
      <Icon name={icon} />
    </div>
    <CardTitle class="stat-title">{title}</CardTitle>
    <span class="stat-value">{value}</span>
  </CardContent>
</CardRoot>

<style>
  .stat-card {
    padding: 2.4rem 2rem;
    background-color: var(--bg-soft);
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.6rem;
  }

  .stat-icon {
    font-size: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  [data-icon] {
    width: 1.5cap;
    height: 1.5cap;
    display: block;
    flex-shrink: 0;
    stroke-width: 2;
    color: var(--brand-primary);
  }

  .stat-title {
    font-weight: 650;
    color: var(--text-primary);
  }

  .stat-value {
    font-size: 3.2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    display: inline-block;
    color: var(--brand-primary);
    text-align: center;
  }
</style>
