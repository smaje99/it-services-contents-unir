---
import { Icon } from 'astro-icon/components';

import type { TopicId } from '@/types/topic';

import LinkButton from '../ui/link/LinkButton.astro';

interface Props {
  topic: TopicId;
}

const { topic } = Astro.props;
---

<LinkButton
  href={`/temas/${topic}?self-assessment=1`}
  size='lg'
  class='self-assessment-link'
>
  <Icon name='location-check' />
  <slot />
</LinkButton>

<style>
  .self-assessment-link {
    justify-content: flex-start;
  }

  [data-icon] {
    width: 2cap;
    height: 2cap;
    display: block;
    flex-shrink: 0;
    stroke-width: 2;
  }
</style>
